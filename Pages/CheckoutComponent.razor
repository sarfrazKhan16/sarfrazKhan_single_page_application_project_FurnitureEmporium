@page "/checkout"

@layout EmptyLayout

<div class="container my-5">
    <h2 class="text-center mb-4">Checkout</h2>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            1. Review Your Cart
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-8">
                    <h5>Product Name</h5>
                    <p>Product description or details go here.</p>
                </div>
                <div class="col-md-2 text-right">
                    <span class="font-weight-bold">$99.99</span>
                </div>
                <div class="col-md-2">
                    <input type="number" class="form-control" value="1" min="1" max="99">
                </div>
            </div>

            <hr>
            <div class="row">
                <div class="col-md-10 text-right">
                    <h5>Subtotal:</h5>
                </div>
                <div class="col-md-2 text-right">
                    <span class="font-weight-bold">$199.98</span>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            2. Shipping Information
        </div>
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label for="fullName">Full Name</label>
                    <input type="text" id="fullName" class="form-control" placeholder="Enter your full name" required>
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" id="address" class="form-control" placeholder="Enter your address" required>
                </div>
                <div class="form-group">
                    <label for="city">City</label>
                    <input type="text" id="city" class="form-control" placeholder="Enter your city" required>
                </div>
                <div class="form-group">
                    <label for="zipCode">ZIP Code</label>
                    <input type="text" id="zipCode" class="form-control" placeholder="Enter your ZIP code" required>
                </div>
            </form>
        </div>
    </div>


    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            3. Delivery Method
        </div>
        <div class="card-body">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="deliveryMethod" id="standardDelivery" value="standard" checked>
                <label class="form-check-label" for="standardDelivery">
                    Standard Delivery - Free
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="deliveryMethod" id="expressDelivery" value="express">
                <label class="form-check-label" for="expressDelivery">
                    Express Delivery - $10.00
                </label>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            4. Payment Information
        </div>
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label for="cardNumber">Card Number</label>
                    <input type="text" id="cardNumber" class="form-control" placeholder="1234 5678 9012 3456" required>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="expiryDate">Expiry Date</label>
                        <input type="text" id="expiryDate" class="form-control" placeholder="MM/YY" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="cvv">CVV</label>
                        <input type="text" id="cvv" class="form-control" placeholder="123" required>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center">
        <button class="btn btn-success btn-lg">Place Order</button>
    </div>
</div>

<style>
    .card-header {
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .btn-lg {
        padding: 0.75rem 1.5rem;
    }
</style>



